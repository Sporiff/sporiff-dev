{
   "extends": ["config:base"],
   "lockFileMaintenance": {
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
   },
   "packageRules": [
      {
         "matchUpdateTypes": [
            "minor",
            "patch",
            "pin"
         ],
         "matchCurrentVersion": "!/^0/",
         "automerge": true,
         "automergeType": "pr",
         "platformAutomerge": true
      }
   ]
}